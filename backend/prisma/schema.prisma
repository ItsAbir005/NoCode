
generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  projects  Project[] 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

model Project {
  id        Int       @id @default(autoincrement())
  name      String
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  workflows Workflow[]  
  canvas    Canvas? 
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt

  @@index([userId])
}

model Workflow {
  id          Int      @id @default(autoincrement())
  name        String
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
  description String? 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([projectId])
}

model Canvas {
  id        Int       @id @default(autoincrement())
  projectId Int       @unique
  project   Project   @relation(fields: [projectId], references: [id])
  layout    Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

